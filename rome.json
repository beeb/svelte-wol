{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true
	},
	"files": {
		"ignore": [".svelte-kit/*", "node_modules/*", "build/*", ".env", ".env.*", "pnpm-lock.yaml", "src/app.d.ts"]
	}
}
